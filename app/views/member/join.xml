<Alloy>
	<Window id="window" class="container">
		<Require type="widget" src="com.mcongrove.navigationBar" id="NavigationBar" />
		<View id="mainView" class="mainView">
			<ScrollView id="joinForm" class="joinForm">
				<View class="formRow">
					<Label class="leftLabel" text="L('join_lb_id')" />
					<TextField id="userId" class="rightInput" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="L('join_lb_pw')" />
					<TextField id="userPw" class="rightInput password" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="L('join_lb_pwrepeat')" />
					<TextField id="userPwRepeat" class="rightInput password" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="L('join_btn_name')" />
					<TextField id="userName" class="rightInput" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="L('join_btn_email')" />
					<TextField id="userEmail" class="rightInput" />
				</View>
				<View class="buttonRow">
					<View class="button bgBlue">
						<Label class="buttonText" text="L('join_btn_join')" onClick="CTX.onClickJoin" />
					</View>
				</View>
				<View class="buttonRow">
					<View class="button bgRed">
						<Label class="buttonText" text="L('join_btn_cancel')" onClick="CTX.onClickCancel" />
					</View>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>
