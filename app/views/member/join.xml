<Alloy>
	<Window id="window" class="container">
		<Require type="widget" src="com.mcongrove.navigationBar" id="NavigationBar" />
		<View id="mainView" class="mainView">
			<View id="joinForm" class="joinForm">
				<View class="formRow">
					<Label class="leftLabel" text="ID" />
					<TextField id="userId" class="rightInput" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="Password" />
					<TextField id="userPw" class="rightInput" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="Repeat" />
					<TextField id="userPwRepeat" class="rightInput" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="Name" />
					<TextField id="userName" class="rightInput" />
				</View>
				<View class="formRow">
					<Label class="leftLabel" text="Email" />
					<TextField id="userEmail" class="rightInput" />
				</View>
				<View class="buttonRow">
					<View class="button bgBlue">
						<Label class="buttonText" text="Sign Up" />
					</View>
				</View>
				<View class="buttonRow">
					<View class="button bgRed">
						<Label class="buttonText" text="Cancel" />
					</View>
				</View>
			</View>
		</View>
	</Window>
</Alloy>
